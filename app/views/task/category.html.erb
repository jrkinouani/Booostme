<div class="row row-offcanvas row-offcanvas-right">
  <div class="col-xs-12 col-sm-12">
    <div class="row">
      <% @tasks.each do | task | %>
        <div class="col-xs-6 col-lg-4">
          <h2><%= task.title %></h2>
          <p> Due date <%= task.end_date %></p>
          <div class="countdown">
            <p class="date" style="display:none"><%= task.end_date.strftime("%d %B %Y") + " #{task.hour}:00:00" %></p>
            <span class="days">00</span>
            <span class="timeRefDays">days</span>
            <span class="hours">00</span>
            <span class="timeRefHours">hours</span>
            <span class="minutes">00</span>
            <span class="timeRefMinutes">minutes</span>
            <span class="seconds">00</span>
            <span class="timeRefSeconds">seconds</span>
          </div>
          <p><%= link_to "View details", task_path(task), :class => "btn btn-default", :role => "button" %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function(){

    $('.countdown').each(function(){
      $(this).countdown({
        date: $(this).find(".date").text(),
        format: "on"
      });
    });

  });
</script>
