 <div class="container task"> 
  <div class="text-center">
    <h3 class="baseline_titte">Booostme helps you get encouragement for successful your daily challenges</h3>
  </div>
  <div class="form-signin task">
    <h2 class="title_task">New task</h2>
    <%= form_for(@task, url: {action: "create"}, html: { method: :post, multipart: true }, :html => {:class => "form-horizontal"} ) do |f| %>
      <div class="field">
        <%= f.label :title %><br />
        <%= f.text_field :title, autofocus: true, :class => "form-control" %>
      </div>
      <br />

      <div class="field">
        <%= f.label :end_date %><br />
        <%= f.text_field :end_date, autofocus: true, :class => "form-control datepicker" %>
      </div>

      <br />

      <div class="field">
        <%= f.label :cover_image %><br />
        <span class="file-input btn btn-block btn-primary btn-file">
          Choose File &hellip;  <%= f.file_field :cover_image, autofocus: true,:class => "file", :onchange => "readURL(this, 'img_prev_boost');" %>
        </span>
        <img id="img_prev_boost" class="img_preview" />
      </div>

      <div class="actions">
        <%= f.submit "Create", :class =>  "btn btn-lg btn-primary btn-block" %>
      </div>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker({
                                  format: "dd/mm/yyyy",
                                  startDate: "<%= Date.today.strftime("%d/%m/%Y")%>",
                                  endDate: "<%= (Date.today + 98).strftime("%d/%m/%Y")%>",
                                  clearBtn: true,
                                  todayHighlight: true
                                });
  });
</script>
