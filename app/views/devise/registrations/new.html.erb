<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form-signin"}) do |f| %>
  <h2>Sign up</h2>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :login, :class => "sr-only" %><br />
    <%= f.text_field :login, autofocus: true, :class => "form-control", :placeholder => "Login" %>
  </div>

  <div class="field">
    <%= f.label :email, :class => "sr-only" %><br />
    <%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "Email address" %>
  </div>

  <div class="field">
    <%= f.label :password, :class => "sr-only" %>
    <% if @validatable %>
    <br />
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "Password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, :class => "sr-only" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control", :placeholder => "Confirm password" %>
  </div>

  <div class="actions">
    <br />
    <%= f.submit "Sign up", :class => "btn btn-lg btn-primary btn-block" %>
  </div>
  <%= render "devise/shared/links" %>
<% end %>

