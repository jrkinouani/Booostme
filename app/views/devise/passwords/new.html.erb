<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, :html => {:class => "form-signin"}) do |f| %>
  <h2>Forgot your password?</h2>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, :class => "sr-only" %><br />
    <%= f.email_field :email, autofocus: true, :placeholder => "Email address" %>
  </div>

  <br />

  <div class="actions">
    <%= f.submit "Send me reset instructions", :class => "btn btn-lg btn-primary btn-block" %>
  </div>
  <%= render "devise/shared/links" %>
<% end %>
